	"version": "0.2.0",
	"configurations": [
		{
			"name": "Docker: Attach to Node",
			"type": "node",
			"request": "attach",
			"smartStep": true,
			"protocol": "inspector",
			"localRoot": "${workspaceFolder}/dist/",
			"remoteRoot": "/app/dist/",
			"sourceMaps": true,
			"address": "0.0.0.0",
			"port": 9229,
			"trace": true,
			"preLaunchTask": "build",
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"skipFiles": ["<node_internals>/**/*.js"]
		},
		{
			"name": "Babel: Launch Program",
			"type": "node",
			"request": "launch",
			"smartStep": true,
			"protocol": "inspector",
			"sourceMaps": true,
			"address": "0.0.0.0",
			"port": 9229,
			"trace": true,
			"preLaunchTask": "build",
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"skipFiles": ["<node_internals>/**/*.js"]
		}
	]
}
